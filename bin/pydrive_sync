#!/usr/bin/env python
from pybier.gdrive_utils import gdrive_upload
from argparse import ArgumentParser
import sys

#######################
#  Parse Arguments    #
#######################
description = 'Required args: --local-dir, --gdrive-loc. Optional args: --SLURM, '
parser = ArgumentParser(description=description)
parser.add_argument('--local-dir',required=True,dest='local_dir',help='Local directory to save to gdrive')
parser.add_argument('--gdrive-loc',required=True,dest='gdrive_loc',help='gdrive folder id (e.g. 0B_PjHSg_YHHgNHVmRFU1Wl9rdWs)')
parser.add_argument('--SLURM',required=False,dest='SLURM',help='Whether or not to use SLURM [True/False] default [True]')

args = parser.parse_args()
local_dir = args.local_dir
gdrive_loc = args.gdrive_loc
SLURM = True if not(args.SLURM == 'False' or args.SLURM == 'F') else False
print '|',args.SLURM,'|'

sys.stdout.write('local_dir: '+local_dir+'\n')
sys.stdout.write('gdrive_loc: '+gdrive_loc+'\n')
sys.stdout.write('use SLURM: '+str(SLURM)+'\n')

#######################
#  Run gdrive upload  #
#######################
p_dry = gdrive_upload(local_dir, gdrive_loc, script_path=None, dry=False, SLURM=SLURM)
sys.stdout.write('Dry run is done: '+str(p_dry.finished())+'\n')
dry_out,dry_err = p_dry.get_output()

sys.stdout.write(dry_out+'\n')


